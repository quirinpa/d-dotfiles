! HHKB Style settings
! I only have one at work!

remove mod1 = Alt_L
remove mod4 = Super_L
keycode 115 = Alt_L
add mod1 = Alt_L

! left super
keycode 64 = Mode_switch

remove Control = Control_R
keysym Control_R = Mode_switch

remove mod1 = Alt_R
remove mod4 = Super_R
keycode 113 = Super_R
keycode 116 = Alt_R
add mod1 = Alt_R

keysym Menu = Multi_key

keysym Tab = Tab ISO_Left_Tab Multi_key

keysym 1 = 1 exclam F1
keysym 2 = 2 at F2
keysym 3 = 3 numbersign F3
keysym 4 = 4 dollar F4
keysym 5 = 5 percent F5
keysym 6 = 6 asciicircum F6
keysym 7 = 7 ampersand F7
keysym 8 = 8 asterisk F8
keysym 9 = 9 parenleft F9
keysym 0 = 0 parenright F10
keysym minus = minus underscore F11
keysym equal = equal plus F12

keysym i = i I Print
keysym o = o O Scroll_Lock
keysym p = p P Pause

keysym k = k K Home
keysym comma = comma less End
keysym l = l L Prior
keysym period = period greater Next

keysym bracketleft = bracketleft braceleft Up
keysym semicolon = semicolon colon Left
keysym apostrophe = apostrophe quotedbl Right
keysym slash = slash question Down

keysym BackSpace = Delete BackSpace BackSpace Clear

keysym backslash = backslash bar Insert
keysym grave = Escape Escape
keysym Menu = grave asciitilde Delete
keysym g = g G grave
keysym t = t T asciitilde

